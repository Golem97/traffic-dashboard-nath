{
    "firestore": {
      "rules": "firestore.rules",
      "indexes": "firestore.indexes.json"
    },
    "functions": {
      "source": "functions"
    },
    "hosting": {
      "public": "frontend/dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "**/*.@(eot|otf|ttf|ttc|woff|font.css)",
          "headers": [
            {
              "key": "Access-Control-Allow-Origin",
              "value": "*"
            }
          ]
        },
        {
          "source": "**/*.@(js|css)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=604800"
            }
          ]
        }
      ]
    },
    "emulators": {
      "auth": {
        "host": "localhost",
        "port": 9099
      },
      "functions": {
        "host": "localhost",
        "port": 5001
      },
      "firestore": {
        "host": "localhost",
        "port": 8080
      },
      "hosting": {
        "host": "localhost",
        "port": 5002
      },
      "ui": {
        "enabled": true,
        "host": "localhost",
        "port": 4000
      },
      "singleProjectMode": true
    }
  }
  